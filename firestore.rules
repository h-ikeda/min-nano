rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /inspectionApplications/{inspectionApplication} {
      allow create: if request.auth.uid == request.resource.data.applicant
      allow read: if request.auth.uid == resource.data.applicant
      allow update: if request.auth.uid == resource.data.applicant && resource.data.status != 'submitted'
    }
  }
}
